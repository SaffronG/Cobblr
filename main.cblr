use std::io;
use math::range;

#derive(Debug, Clone)
struct Point {
    x: f64,
    y: f64,
}

struct Rectangle {
    width: f64 = 10.0,
    height: f64 = 20.0,
}

impl Point {
    fn new(x: f64, y: f64) -> Point {
        Point { x, y }
    }

    fn translate(&mut self, dx: f64, dy: f64) {
        self.x += dx;
        self.y += dy;
    }
}

impl Rectangle {
    fn area(&self) -> f64 {
        self.width * self.height
    }
}

async fn fetch_data(url: String) -> Result<String, String> {
    if url == "ok" {
        Ok("data".into())
    } else {
        Err("failed".into())
    }
}

fn map_example(nums: Vec<i32>) -> Vec<i32> {
    nums.map(|n| n * 2)
}

fn filter_example(nums: Vec<i32>) -> Vec<i32> {
    nums.filter(|n| n % 2 == 0)
}

